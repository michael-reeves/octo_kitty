<div class="container-fluid container-home">
  <div id="banner" class="page-header">
    <h1>Dashboard</h1>
  </div>

  <div class="container">
    <div class="row">
      <div class="row col-md-9">
        <div class="profile">
          <div class="row">
            <div class="col-md-6">
              <div class="row">
                <%= image_tag current_user.image_url, class: "img-rounded pull-left" %>
                <div class="user-info col-md-offset-5">
                  <h3><%= @user.name %></h3>
                  <p><%= current_user.nickname %></p>
                  <h4><%= current_user.email %></h4>
                  <div class="company-info">
                    <%= @user.company %><br>
                    <%= link_to @user.blog, @user.blog %><br>
                    Joined <%= Time.parse(@user.created_at).strftime("%b %d, %Y") %>
                  </div>
                </div>

              </div> <!-- ./row -->
              <div class="row">
                <div class="col-md-6 col-md-offset-4">
                  <table>
                    <tr>
                      <td><%= @user.followers %></td>
                      <td><%= @user.following %></td>
                      <td><%= @user.starred %></td>
                      <td><%= @user.public_repos %></td>
                      <td><%= @user.public_gists %></td>
                    </tr>
                    <head>
                      <th><h6>Followers</h6></th>
                      <th><h6>Following</h6></th>
                      <th><h6>Starred</h6></th>
                      <th><h6>Repos</h6></th>
                      <th><h6>Gists</h6></th>
                    </head>
                  </table>
                </div>
              </div> <!-- ./row -->
            </div>
            <div class="contributions col-md-6">
              <h3>Contributions</h3>
              <div class="contrib-column contrib-column-first col-md-4">
                <span class="text-muted">Contributions in the last year</span>
                <span class="contrib-number">679 total</span>
                <span class="text-muted">Sep 8, 2014 – Sep 8, 2015</span>
              </div>
              <div class="contrib-column col-md-4">
                <span class="text-muted">Longest streak</span>
                <span class="contrib-number">17 days</span>
                <span class="text-muted">
                  July 28 –
                  August 13
                </span>
              </div>
              <div class="contrib-column col-md-4">
                <span class="text-muted">Current streak</span>
                <span class="contrib-number">3 days</span>
                <span class="text-muted">
                  September 6 –
                  September 8
                </span>
              </div>
            </div>

          </div> <!-- ./row -->
        </div> <!-- ./container -->

        <br>

        <div class="row">
          <div class="bs-component pill-container">
            <ul class="nav nav-pills">
              <li class="active"><a href="#repositories" data-toggle="tab">Repositories</a></li>
              <li><a href="#pull-requests" data-toggle="tab">Pull Requests</a></li>
            </ul>
            <div id="myTabContent" class="tab-content">
              <div class="tab-pane fade active in" id="repositories">
                <ul class="repository-list">
                  <% @repos.each do |repo| %>
                    <li class="repository-item">
                      <span class="repo-icon mega-octicon octicon-mark-github"></span>
                      <span class="repo-name">
                        <%= link_to "#{repo.owner}/#{repo.name}", repo.html_url %>
                      </span>
                      <span class="last-updated">Updated <%= repo.updated_at.strftime("%Y-%m-%d") %></span>
                    </li>
                  <% end %>
                </ul>
              </div>

              <div class="tab-pane fade" id="pull-requests">
                <ul class="pull-request-list">
                  <% @pull_requests.each do |pull_request| %>
                    <li class="pull-request-item">
                      <span class="pull-request-icon mega-octicon octicon-git-pull-request"></span>
                      <span class="pull-request">
                        <%= pull_request.actor_nickname %>
                        <%= link_to pull_request.title, pull_request.url %>
                      </span>
                      <span class="last-updated">
                        Updated <%=  pull_request.updated_at.strftime("%Y-%m-%d") %>
                      </span>
                    </li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div> <!-- ./row -->
      </div>

      <aside class="col-md-3 recent-activity">
        <h3>Recent Activity</h3>
        <ul>
          <%# @events.each do |event| %>
          <li> <%#= event[:nickname] %> <%#= event[:action] %> <%#= event.payload %> </li>
          <%# end %>
        </ul>
      </aside>

    </div> <!-- ./row -->
  </div> <!-- ./container -->
</div>
